<div class="order">
  <% if grid.ordered_by? column %>
      <%= link_to url_for(grid.param_name => grid.as_query.merge(:order => column.name, :descending => !grid.descending)) do
        fa_icon grid.descending ? 'sort-desc' : 'sort-asc'
      end
      %>
  <% else %>
      <%= link_to url_for(grid.param_name => grid.as_query.merge(:order => column.name, :descending => false)) do
        fa_icon 'sort'
      end
      %>
  <% end %>
</div>
