<!DOCTYPE html>
<html>
<head>
  <title>Fluent CMS</title>
  <%= stylesheet_link_tag "fluent/application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "fluent/admin", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "fluent/application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "fluent/admin", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% unless flash.empty? %>
    <div class="alert alert-warning admin-alert">
      <a class="close" data-dismiss="alert">Ã—</a>
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <% end %>
    </div>
<% end %>

<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Fluent CMS</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <%= render "fluent/admin/shared/admin_menu" %>
  </div>
  <!-- /.navbar-collapse -->
</nav>

<div class="content">

  <div class="breadcrumbs">
    <%= breadcrumbs_helper @breadcrumbs %>
  </div>

  <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 main-container">
    <div class="col-md-10 col-lg-10 col-sm-10 zero-padding content-container">
      <%= yield %>
    </div>
    <% if @menu != nil && !@menu.empty? %>
        <div class="col-md-2 col-lg-2 col-sm-2 zero-padding panel panel-default">
          <%= nav_menu_list_helper @menu %>
        </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
</script>
</body>
</html>
