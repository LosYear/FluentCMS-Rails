<%= semantic_form_for @menu_item, url: @menu_item.persisted? ? admin_menu_item_path(@menu_item) : admin_menu_items_path(@menu_item),
                      as: :menu_item, html: {:class => "form-horizontal"} do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
        <%= f.input :menu, :include_blank => false, :input_html => { :readonly => true } %>
        <%= f.input :parent_id, :as => :select, :collection => @menu_item.menu.admin_collection, :include_blank => false %>
        <%= f.input :title %>
        <%= f.input :url %>
        <%= f.input :status %>
        <%= f.input :data_push %>
    <% end %>
    <%= f.actions :class => 'form-group' do %>
        <div class="col-lg-offset-2 col-lg-8">
          <%= f.action :submit %>
          <%= f.action :cancel %>
        </div>
    <% end %>
<% end %>