<%= semantic_form_for [:admin, @role], :html => {:class => "form-horizontal"}  do |f| %>
  <%= f.semantic_errors :name %>
  <%= f.inputs %>
  <%= f.actions :class => 'form-group' do %>
    <div class="col-lg-offset-2 col-lg-8">
      <%= f.action :submit %>
      <%= f.action :cancel, :url => admin_roles_path, :button_html => {:data => {:push => "true"}} %>
    </div>
  <% end %>
<% end %>