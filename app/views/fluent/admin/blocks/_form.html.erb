<%= semantic_form_for @block, url: @block.persisted? ? admin_block_path(@block) : admin_blocks_path(@block),
                      as: :block, html: {:class => "form-horizontal"} do |f| %>
    <%= f.semantic_errors :title, :name, :content, :type %>
    <%= f.inputs do %>
        <%= f.input :title %>
        <%= f.input :name %>
        <%= f.input :type, :as => :select, :collection => [["HTML", "html"]] %>
        <%= f.input :content, :as => :ckeditor %>
        <%= f.input :status, :as => :boolean %>
    <% end %>
    <%= f.actions :class => 'form-group' do %>
        <div class="col-lg-offset-2 col-lg-8">
          <%= f.action :submit %>
          <%= f.action :cancel %>
        </div>
    <% end %>
<% end %>