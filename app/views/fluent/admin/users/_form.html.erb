<%= semantic_form_for [:admin, @user], :html => {:class => "form-horizontal"}  do |f| -%>
    <%= f.semantic_errors :email, :username, :password, :password_confirmation %>
    <%= f.inputs :email, :username, :password, :password_confirmation, :roles %>

    <%= f.actions :class => 'form-group' do %>
        <div class="col-lg-offset-2 col-lg-8">
          <%= f.action :submit %>
          <%= f.action :cancel, :url => admin_users_path, :button_html => {:data => {:push => "true"}} %>
        </div>
    <% end %>
<% end -%>